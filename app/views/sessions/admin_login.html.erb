<div class="container">

  <div class="box" style="width:500px;height:500px;padding:30px">
    <h1>Login</h1>

    <%= form_tag "/sessions/login" do %>

      <p>
        Username
        <br>
        <%= text_field_tag :username %>
      </p>
      <p>
        Password
        <br>
        <%= password_field_tag :password %>
      </p>
      <p>
        <%= submit_tag "Login" %>
      </p>

      <p>For demo purposes please login as tom/123 or deb/234</p>
      
    <% end %>
  </div>
  
</div>