<div class="container">

  <div class="admin-box" style="width:500px;height:500px;padding:30px">
    <h2>Admin Login</h2>

    <%= form_tag "/sessions/login" do %>

      <p>
        Username
        <br>
        <%= text_field_tag :username %>
      </p>
      <p>
        Password
        <br>
        <%= password_field_tag :password %>
      </p>
      <p>
        <%= submit_tag "Login", class:"btn go-button" %>
      </p>

      <p><b>For demo purposes please login as tom/123 or deb/234</b></p>
      
    <% end %>
  </div>
  
</div>