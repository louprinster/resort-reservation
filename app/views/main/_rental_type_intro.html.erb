<% elsif category == "Boat" %>

  <h3 class="header-box">Nickajack Marina Boat Rentals</h3>
  <table class="table">
    <tr>
      <td>
        <img src="/assets/deckboat.jpg" alt="Nickajack Marina Deck Boats" width="250" padding-top="30" class="pull-left">
      </td>
      <td style="padding-left:30px">
          <h4 class="header-box">Deck Boats</h4>
