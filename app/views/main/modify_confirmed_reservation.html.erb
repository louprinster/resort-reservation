<div style="container">

  <%= form_tag "/modify_confirmed_reservation" do %>
  <div style="padding:30px">
      <p>
        <%= label_tag :last_name, "Last Name: " %>&nbsp;&nbsp;
        <%= text_field_tag :last_name, @last_name, size: 20 %>
      </p>
      <p>
        <%= label_tag :confirmation_num, "Confirmation No: " %>&nbsp;&nbsp;
        <%= text_field_tag  :confirmation_num, @confirmation_num, size: 10 %>
      </p>
      <p>
        <%= submit_tag "Find reservation" %>
      </p>
  </div>
  <% end %>

</div>