<div class="container">
  <%= form_tag "/review" do %>
  
  <div class="pull-left" style="margin:20px; background-color:orange; padding:20px;">

    <h4 style="text-align:center">Reservation Summary</h4>
    <hr>
  
    <p>
        <b>Check-In: </b><%= @start_date %><br>
    </p>
    <p>
        <b>Check-Out: </b><%= @end_date %><br>
    </p>
    <p>
        <b>Adults: </b><%= @adults %><br>
    </p>
    <p>
        <b>Children under 18: </b><%= @children %><br>
    </p>
    <p> 
        <b>Pets: </b><%= @pets %><br>
    </p>
      <% if @rental.category == "Cabin" %>
          <p> 
              <b>Cabin No.: </b><%= @rental_item.name %><br>
              <b>Cabin Type: </b><%= "#{@rental.subcategory} #{@rental.category}" %><br>
              <b>No. Bedrooms: </b><%= @rental.num_bedrooms %><br>
              <b>No. Baths: </b><%= @rental.num_baths %><br>
          </p>
      <% elsif @rental.category == "Boat" %>
          <p>
              <b>Boat No: </b><%= @rental_item.name %><br>
              <b>Boat Type: </b><<%= @rental.subcategory %><br>
          </p>
      <% elsif @rental.category == "Boat Slip" %>
          <p>
              <b>Boat Slip No: <b><%= @rental_item.name %><br>
              <b>Boat Slip Type: </b><%= @rental.subcategory %><br>
              <b>Length: </b><%= @rental_item.length %><br>
              <b>Width: </b><%= @rental_item.width %><br>
              <b>Height: </b><%= @rental_item.height %><br>
          </p>
      <% end %>  
    <p><%= submit_tag "Change Reservation" %></p>
    <p><%= submit_tag "Cancel" %></p>
  </div>

  <div class="pull-right" style="width:830px; margin:20px;">

    <h4 style="background:#C9BCAD; padding:15px; text-align:left;">Guest Details</h4>
    <p>
      <%= @customer.first_name %> <%= @customer.last_name %><br>
      <%= @customer.address1 %><br>
      <% if @customer.address2 != "" %><%= @customer.address2 %><br><% end %>
      <%= "#{@customer.city}, #{@customer.state}  #{@customer.zipcode}" %>
    </p>
    <p>
      Phone 1: <%= @customer.phone1 %><br>
      <% if @customer.phone2 != "" %><Phone 2: %= @customer.phone2 %><br><% end %>
      <br>
      Email: <%= @customer.email %>
    </p>
    <br><br>
    <p>
    <%= submit_tag "Confirm" %>
    </p>

  </div>
  
  <% end %>
</div>